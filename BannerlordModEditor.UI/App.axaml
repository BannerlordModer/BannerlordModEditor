<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BannerlordModEditor.UI.App"
             xmlns:local="using:BannerlordModEditor.UI"
             xmlns:vm="using:BannerlordModEditor.UI.ViewModels"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <vm:BoolToStringConverter x:Key="BoolToStringConverter"/>
    </Application.Resources>
  
    <Application.Styles>
        <SimpleTheme />
        <Style Selector="Button.danger /template/ ContentPresenter">
            <Setter Property="Background" Value="#FDE7E9"/>
        </Style>
        <Style Selector="Button.danger:light /template/ ContentPresenter">
            <Setter Property="Background" Value="#FDE7E9"/>
            <Setter Property="TextBlock.Foreground" Value="#B32424"/>
        </Style>
        <Style Selector="Button.danger:dark /template/ ContentPresenter">
            <Setter Property="Background" Value="#4A1919"/>
            <Setter Property="TextBlock.Foreground" Value="#F4C7C7"/>
        </Style>
    </Application.Styles>
</Application>