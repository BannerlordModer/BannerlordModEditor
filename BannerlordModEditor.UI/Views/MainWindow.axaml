<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BannerlordModEditor.UI.ViewModels"
        xmlns:editors="using:BannerlordModEditor.UI.Views.Editors"
        xmlns:vmEditors="using:BannerlordModEditor.UI.ViewModels.Editors"
        x:Class="BannerlordModEditor.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="骑砍2模组编辑器 - Bannerlord Mod Editor"
        Width="1200" Height="800"
        MinWidth="800" MinHeight="600">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="250"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航面板 -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- 搜索框 -->
                <Border DockPanel.Dock="Top" Background="White" Margin="8" Padding="8" CornerRadius="4" BorderBrush="#CCCCCC" BorderThickness="1">
                    <TextBox Text="{Binding EditorManager.SearchText}" 
                             Watermark="搜索编辑器..." 
                             BorderThickness="0"
                             Background="Transparent"/>
                </Border>

                <!-- 分类树形列表 -->
                <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding EditorManager.Categories}" Margin="8,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="{Binding IsExpanded}" Margin="0,4">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,8,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#666666" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Expander.Header>
                                    
                                    <ItemsControl ItemsSource="{Binding Editors}" Margin="20,4,0,4">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Command="{Binding $parent[Window].DataContext.EditorManager.SelectEditorCommand}"
                                                        CommandParameter="{Binding}"
                                                        Classes="editor-item"
                                                        IsVisible="{Binding IsAvailable}"
                                                        Margin="0,2">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <Border Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="1"
                                                                    CornerRadius="4"
                                                                    Padding="8,6">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0"/>
                                                                    <StackPanel>
                                                                        <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Medium"/>
                                                                        <TextBlock Text="{Binding XmlFileName}" FontSize="10" Foreground="#666666"/>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- 分隔条 -->
        <GridSplitter Grid.Column="1" Background="#DDDDDD" ResizeDirection="Columns"/>

        <!-- 右侧编辑器区域 -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 面包屑导航 -->
            <Border Grid.Row="0" Background="#FFFFFF" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="16,12">
                <TextBlock Text="{Binding EditorManager.CurrentBreadcrumb}" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="#333333"/>
            </Border>

            <!-- 动态编辑器内容 -->
            <Border Grid.Row="1" Background="White">
                <Grid>
                    <!-- 默认内容 -->
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                               IsVisible="{Binding ShowDefaultContent}">
                        <TextBlock Text="🎯" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                        <TextBlock Text="选择左侧的XML文件开始编辑" 
                                  FontSize="18" 
                                  HorizontalAlignment="Center"
                                  Foreground="#666666"/>
                        <TextBlock Text="支持搜索功能，快速找到需要的配置文件" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center"
                                  Foreground="#999999"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <!-- 属性编辑器 -->
                    <editors:AttributeEditorView 
                        DataContext="{Binding AttributeEditor}"
                        IsVisible="{Binding $parent[Window].DataContext.ShowAttributeEditor}" />
                        
                    <!-- 骨骼体型编辑器 -->
                    <editors:BoneBodyTypeEditorView 
                        DataContext="{Binding BoneBodyTypeEditor}"
                        IsVisible="{Binding $parent[Window].DataContext.ShowBoneBodyTypeEditor}" />
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <!-- 样式定义 -->
    <Window.Styles>
        <Style Selector="Button.editor-item">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        
        <Style Selector="Button.editor-item:pointerover">
            <Setter Property="Background" Value="#E8F4FD"/>
            <Setter Property="BorderBrush" Value="#B3D9F7"/>
        </Style>
        
        <Style Selector="Button.editor-item:pressed">
            <Setter Property="Background" Value="#D1E7F5"/>
        </Style>
        
        <Style Selector="Expander">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style Selector="Expander /template/ ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Styles>
</Window>
