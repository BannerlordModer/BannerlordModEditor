{
  "testConfiguration": {
    "testCategories": {
      "unit": {
        "name": "单元测试",
        "description": "测试核心业务逻辑和组件功能",
        "priority": "high",
        "timeout": "00:10:00",
        "requiredCoverage": 95.0,
        "parallelExecution": true,
        "retryCount": 2
      },
      "integration": {
        "name": "集成测试",
        "description": "测试XML适配集成功能",
        "priority": "high",
        "timeout": "00:15:00",
        "requiredCoverage": 90.0,
        "parallelExecution": true,
        "retryCount": 2
      },
      "performance": {
        "name": "性能测试",
        "description": "测试系统性能指标",
        "priority": "medium",
        "timeout": "00:30:00",
        "requiredCoverage": 85.0,
        "parallelExecution": false,
        "retryCount": 1,
        "performanceThresholds": {
          "maxResponseTime": 5000,
          "maxMemoryUsage": 104857600,
          "maxCpuUsage": 80.0
        }
      },
      "largeXml": {
        "name": "大型XML测试",
        "description": "测试大型XML文件处理",
        "priority": "medium",
        "timeout": "01:00:00",
        "requiredCoverage": 80.0,
        "parallelExecution": false,
        "retryCount": 1,
        "largeFileThreshold": 1048576
      },
      "memory": {
        "name": "内存测试",
        "description": "测试内存使用和垃圾回收",
        "priority": "medium",
        "timeout": "00:45:00",
        "requiredCoverage": 85.0,
        "parallelExecution": false,
        "retryCount": 1,
        "memoryThresholds": {
          "maxMemoryIncrease": 52428800,
          "maxMemoryLeak": 1048576,
          "gcEfficiency": 0.8
        }
      },
      "errorHandling": {
        "name": "错误处理测试",
        "description": "测试错误处理和边界情况",
        "priority": "high",
        "timeout": "00:20:00",
        "requiredCoverage": 90.0,
        "parallelExecution": true,
        "retryCount": 1
      },
      "concurrency": {
        "name": "并发测试",
        "description": "测试线程安全和并发处理",
        "priority": "high",
        "timeout": "00:25:00",
        "requiredCoverage": 90.0,
        "parallelExecution": true,
        "retryCount": 1,
        "concurrencySettings": {
          "maxConcurrentTasks": 20,
          "minEfficiency": 0.5,
          "timeoutPerTask": "00:05:00"
        }
      },
      "regression": {
        "name": "回归测试",
        "description": "防止历史问题回归",
        "priority": "high",
        "timeout": "00:30:00",
        "requiredCoverage": 100.0,
        "parallelExecution": true,
        "retryCount": 1,
        "mustPass": true
      },
      "userExperience": {
        "name": "用户体验测试",
        "description": "测试端到端用户场景",
        "priority": "low",
        "timeout": "00:40:00",
        "requiredCoverage": 85.0,
        "parallelExecution": false,
        "retryCount": 1,
        "uxThresholds": {
          "maxResponseTime": 3000,
          "maxWorkflowTime": 10000,
          "minSuccessRate": 0.9
        }
      }
    },
    "globalSettings": {
      "testDataDirectory": "TestData",
      "resultsDirectory": "TestResults",
      "coverageReportFormat": "Html",
      "logLevel": "normal",
      "continueOnError": false,
      "generateReport": true,
      "uploadArtifacts": true,
      "notifyOnFailure": true
    },
    "qualityGates": {
      "unitTestCoverage": 95.0,
      "integrationTestCoverage": 90.0,
      "performanceTestPassRate": 95.0,
      "regressionTestPassRate": 100.0,
      "overallTestPassRate": 95.0,
      "maxTestExecutionTime": "02:00:00",
      "maxMemoryUsage": 2147483648
    },
    "environments": {
      "development": {
        "skipPerformanceTests": false,
        "skipLargeFileTests": false,
        "parallelFactor": 1,
        "debugMode": true
      },
      "ci": {
        "skipPerformanceTests": false,
        "skipLargeFileTests": false,
        "parallelFactor": 2,
        "debugMode": false
      },
      "production": {
        "skipPerformanceTests": false,
        "skipLargeFileTests": false,
        "parallelFactor": 1,
        "debugMode": false
      }
    },
    "reporting": {
      "formats": [
        "trx",
        "html",
        "junit"
      ],
      "includeCoverage": true,
      "includePerformanceMetrics": true,
      "includeMemoryMetrics": true,
      "generateSummary": true,
      "uploadToStorage": true
    },
    "notifications": {
      "email": {
        "enabled": false,
        "recipients": [],
        "template": "test-report.html"
      },
      "slack": {
        "enabled": false,
        "webhookUrl": "",
        "channel": "#testing"
      },
      "teams": {
        "enabled": false,
        "webhookUrl": ""
      }
    }
  }
}